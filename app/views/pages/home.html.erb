    <div class="col-12 section-sign-up" id="sign-up">
      <h1 class="d-flex justify-content-center text-center">Sign up to hear about our launch</h1>
      <br>
      <div class="container d-flex justify-content-center">
        <div class="col-lg-6 align-center info">
        <form name="submit-to-google-sheet" class="newsletter">
          <div class="p-3">
            <input name="email" type="email" placeholder=" hello@companyname.co.uk" required style="width: 100%;">
          </div>
          <div class="p-3">
            <br>
            <button type="submit" class="btn btn-contact">Subscribe</button>
          </div>
        </form>
        </div>

        <script>

          var scriptURL = 'Change this to the appropriate google script url'
          var form = document.forms['submit-to-google-sheet']
          var running = false

          form.addEventListener('submit', e => {
            if (running === true) {
              setTimeout(function(){ location.reload(); }, 3000)
              running = false;
              return false;
            }
            running = true;
            e.preventDefault()
            fetch(scriptURL, { method: 'POST', body: new FormData(form)})
              .then(response => console.log('Success!', response))
              .catch(error => console.error('Error!', error.message))
              setTimeout(function(){ location.reload(); }, 3000);
          })

        </script>
      </div>

    </div>
